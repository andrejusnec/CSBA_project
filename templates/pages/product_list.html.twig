                    <div class="navigation col-md-12" style="margin:auto">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                    <!-- Pagination End -->
                </div>

            </div>
        </div>
    </div>
    <!-- Product List End -->

    {% block brand %} {{ include('static/brand_slider.html.twig') }} {% endblock %}

{% endblock %}