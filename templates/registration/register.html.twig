{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8" style="margin: auto">
                <div class="checkout-inner">
                    <h1 class="h3 mb-3 font-weight-normal">Register</h1>

                    {{ form_start(registrationForm, { 'attr' : { 'class': 'row', 'style' : 'margin-bottom: 40px;' } }) }}
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(registrationForm) }}
                    </div>
                    <div class="col-md-6" style="margin: auto">
                        {{ form_row(registrationForm.first_name, { label: 'Name'}) }}
                    </div>
                    <div class="col-md-6" style="margin: auto">
                        {{ form_row(registrationForm.last_name, { label: 'Surname'}) }}
                    </div>
                    <div class="col-md-6" style="margin: auto">
                        {{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
                    </div>
                    <div class="col-md-6" style="margin: auto">
                        {{ form_row(registrationForm.email, {label: 'Email'}, { 'attr' : { 'class': 'row' }}) }}
                    </div>
                    <div class="col-md-12" style="margin: auto">
                        {{ form_row(registrationForm.agreeTerms, { 'attr' : { 'style': 'margin-left:5px' }}) }}
                    </div>
                    <div class="col-md-12">
                    <button style="margin: auto" type="submit" class="btn btn-sm">Register</button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
