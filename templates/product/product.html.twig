{% block productList %}

    {% if selectedProducts is defined %}
        {% set data = selectedProducts %}
    {% else %}
        {% set data = allProducts %}
    {% endif %}
    {% if data %}
    {% for value in data %}
        <div class="col-md-4">
            <div class="product-item">
                <div class="product-title">
                    <a href="{{ path('pages/product_details_show', {'slug' : value.id}) }}">{{ value.title }}</a>
                    <div class="ratting">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                </div>
                <div class="product-image">
                    <a href="#">
                        <img src="{{ asset('uploads/images/') }}{{ value.MainImage is not empty ? value.MainImage.FileName : '#' }}"
                             alt="{{ value.title }}">
                    </a>
                    <div class="product-action add-to-wishlist">
                        <a href="#"><i class="fa fa-cart-plus"></i></a>
                        {% if app.user %}
                            <a class ="wishListAdd" data-add="{{ value.id }}" data-user="{{ app.user.id}}" href="#"><i class="fa fa-heart"></i></a>
                        {% endif %}
                        <a href="{{ path('pages/product_details_show', {'slug' : value.id}) }}"><i class="fa fa-search"></i></a>
                    </div>
                </div>
                <div class="product-price">
                    <h3><span>$</span>99</h3>
                    <a class="btn" href=""><i class="fa fa-shopping-cart"></i>Buy Now</a>
                </div>
            </div>
        </div>
    {% endfor %}
    {% endif %}
{% endblock %}